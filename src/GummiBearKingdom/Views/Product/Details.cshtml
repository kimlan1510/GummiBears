@model GummiBearKingdom.Models.Product
@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <img src=@Html.DisplayFor(model => model.Image) alt="Sample photo">
        </div>
        <div class="col-lg-8 col-md-8 col-md-8">
            <h2>@Html.DisplayFor(model => model.Name)</h2>
            <p>@Html.DisplayNameFor(model => model.Cost): @Html.DisplayFor(model => model.Cost)</p>
            <p>@Html.DisplayNameFor(model => model.Country): @Html.DisplayFor(model => model.Country)</p>   
        </div>
    </div>
    <p>@Html.ActionLink("Back To Location List", "Index")</p>
</div>
